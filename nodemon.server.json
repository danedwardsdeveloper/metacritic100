{
	"exec": "tsx server/server.ts",
	"watch": [
		"server/",
		".env",
		"./client/.env",
		"package.json",
		"nodemon.server.json"
	],
	"ext": "ts,json,env",
	"ignore": [".git", "node_modules/**/node_modules"],
	"quiet": true,
	"events": {
		"restart": "clear && echo 'App restarted due to changes'"
	}
}
